<header>
<div class="navbar navbar-inverse navbar-static-top navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only"><%= t"title.toggle" %></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("pages.website"), root_path, id: "logo" %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("title.home"), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.try :admin? %>
            <li><%= link_to t("admin.panel"), "#" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.setting"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("login.logout"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("pages.signup"), new_user_registration_path %></li>
          <li><%= link_to t("pages.login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

