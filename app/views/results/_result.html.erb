<div class="row">
  <div class="col-md-4">
    <h2><%= result.question.content %></h2>
  </div>
  <div class="col-md-8">
    <table class="table table-striped">
      <% result.question.answers.each do |answer| %>
        <tr>
          <% if answer.id == result.answer_id %>
            <td>
              <%= radio_button_tag "result[#{result.id}]", result.id, true, disabled: true %>
            </td>
            <td>
              <% if answer.correct? %>
                <b style="color: blue"><%= answer.content %></b>
              <% else %>
                <b style="color: red"><%= answer.content %></b>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= radio_button_tag "result[#{result.id}]", result.id, false, disabled: true %>
            </td>
            <td>
              <%= answer.content %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table> 
  </div>
</div>
<hr>
